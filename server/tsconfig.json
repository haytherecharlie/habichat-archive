{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "config/*": ["config/*"],
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}